{
  "name": "duper-vs-code",
  "displayName": "Duper",
  "description": "Duper support for Visual Studio Code",
  "version": "0.4.0",
  "publisher": "epic-eric",
  "homepage": "https://duper.dev.br",
  "bugs": {
    "url": "https://github.com/EpicEric/duper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EpicEric/duper.git"
  },
  "license": "MIT",
  "categories": [
    "Programming Languages"
  ],
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./dist/client.js",
  "contributes": {
    "languages": [
      {
        "id": "duper",
        "aliases": [
          "Duper",
          "duper"
        ],
        "extensions": [
          ".duper"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "images/logo.png",
          "dark": "images/logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "duper",
        "scopeName": "source.duper",
        "path": "./syntaxes/duper.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.105.0",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "rm -rf dist && esbuild client=./client/src --bundle --outdir=dist --external:vscode --format=cjs --platform=node --minify",
    "prelaunch": "cd .. && cargo build -p duper_lsp && cd - && npm run build"
  }
}